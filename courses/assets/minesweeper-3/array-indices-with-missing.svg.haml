    / 3rd rectangle
    %g(transform="translate(280, 0)")
      %rect(class="black-stroke white-fill"
        x="0.5"
        y="0.5"
        width="240.5"
        height="40.5")
      - 5.times do |i|
        %line(class="black-stroke"
          x1="#{40.5 + 40 * i}"
          y1="0.5"
          x2="#{40.5 + 40 * i}"
          y2="40.5")
      - (75..80).each_with_index do |n, i|
        %text(class="cell-text" x="#{20 + 40 * i}" y="20.5")<
          = n
      - (74..79).each_with_index do |n, i|
        %g(transform="translate(#{20 + 40 * i}, 50)")
          %text(class="small-text" x="0.5" y="57.5")<
            = n
          %use(href="#line" x="0" y="0")
