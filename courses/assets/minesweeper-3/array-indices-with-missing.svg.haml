<?xml version="1.0" encoding="utf-8"?>
%svg(viewBox="0 0 522 135" xmlns="http://www.w3.org/2000/svg")
  %defs
    %g(id="line")
      %polygon(class="black-fill"
        points="-3.5 10 0.5 0 4.5 10 0.5 7.5")
      %line(class="black-stroke dashed"
        x1="0.5"
        y1="10.5"
        x2="0.5"
        y2="45.5")
    %radialGradient(id="star-gradient")
      %stop(offset="0%" stop-color="white")
      %stop(offset="50%" stop-color="white" stop-opacity="0")
  %g(transform="translate(0, 10)")
    / 1st rectangle
    %g(transform="translate(0, 0)")
      %rect(class="black-stroke white-fill"
        x="0.5"
        y="0.5"
        width="120.5"
        height="40.5")
      - 2.times do |i|
        %line(class="black-stroke"
          x1="#{40.5 + 40 * i}"
          y1="0.5"
          x2="#{40.5 + 40 * i}"
          y2="40.5")
      - (0..2).each_with_index do |n, i|
        %text(class="cell-text" x="#{20 + 40 * i}" y="20.5")<
          = n
      - (0..2).each_with_index do |n, i|
        %g(transform="translate(#{20 + 40 * i}, 50)")
          %text(class="small-text" x="0.5" y="57.5")<
            = n
          %use(href="#line" x="0" y="0")
    / 2nd rectangle
    %g(transform="translate(160, 0)")
      %rect(class="black-stroke white-fill"
        x="0.5"
        y="0.5"
        width="80.5"
        height="40.5")
      - 1.times do |i|
        %line(class="black-stroke"
          x1="#{40.5 + 40 * i}"
          y1="0.5"
          x2="#{40.5 + 40 * i}"
          y2="40.5")
      - (4..5).each_with_index do |n, i|
        %text(class="cell-text" x="#{20 + 40 * i}" y="20.5")<
          = n
      - (3..4).each_with_index do |n, i|
        %g(transform="translate(#{20 + 40 * i}, 50)")
          %text(class="small-text" x="0.5" y="57.5")<
            = n
          %use(href="#line" x="0" y="0")
    / star
    %g(transform="translate(140.5, 20)")
      - 7.times do |i|
        %g(transform="rotate(#{(360 / 7) * i})")
          %polygon(class="dark-grey-fill white-stroke"
            style="stroke-width: 2px"
            points="-0.25 0 0.25 0 2.75 -21 -2.75 -21"
            transform="translate(0, 0)")
          %ellipse(style="fill: url(#star-gradient)" cx="0" cy="0" rx="30" ry="30")
