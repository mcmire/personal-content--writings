<?xml version="1.0" encoding="utf-8"?>
%svg(viewBox="0 0 822 401" xmlns="http://www.w3.org/2000/svg")
  %defs
    %g(id="row-and-column-indices")
      %g(transform="translate(40, 40)")
        %rect(class="black-stroke white-fill"
          x="0.5"
          y="0.5"
          width="360"
          height="360")
        - 9.times do |n|
          %line(class="black-stroke"
            x1="#{(40 * n) + 40.5}"
            y1="0.5"
            x2="#{(40 * n) + 40.5}"
            y2="360.5")
        - 9.times do |n|
          %line(class="black-stroke"
            x1="0.5"
            y1="#{(40 * n) + 40.5}"
            x2="360.5"
            y2="#{(40 * n) + 40.5}")
      %g
        - (0..8).each do |i|
          %text(class="cell-text" x="#{(40 * i) + 60.5}" y="20")<
            = i
      %g
        - (0..8).each do |i|
          %text(class="cell-text" x="20" y="#{(40 * i) + 60.5}")<
            = i
    %g(id="serial-indices")
      %g
        %rect(class="black-stroke white-fill"
          x="0.5"
          y="0.5"
          width="360"
          height="360")
        - 9.times do |n|
          %line(class="black-stroke"
            x1="#{(40 * n) + 40.5}"
            y1="0.5"
            x2="#{(40 * n) + 40.5}"
            y2="360.5")
        - 9.times do |n|
          %line(class="black-stroke"
            x1="0.5"
            y1="#{(40 * n) + 40.5}"
            x2="360.5"
            y2="#{(40 * n) + 40.5}")
      %g
        - 9.times do |y|
          - 9.times do |x|
            %text(class="cell-text black-fill"
              x="#{(40 * x) + 20.5}"
              y="#{(40 * y) + 20.5}")<
              = (9 * y) + x
  %use(href="#row-and-column-indices" x="0" y="0")
  %use(href="#serial-indices" x="460.5" y="40")
